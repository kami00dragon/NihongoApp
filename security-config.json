{
  "security": {
    "version": "2.0.0",
    "lastUpdated": "2024-01-26",
    "measures": {
      "githubActions": {
        "enabled": true,
        "permissions": "minimal",
        "secretScanning": true,
        "dependencyAudit": true,
        "buildVerification": true
      },
      "repository": {
        "branchProtection": true,
        "requirePullRequest": false,
        "requireStatusChecks": true,
        "forcePushProtection": true
      },
      "dependencies": {
        "lockfileEnabled": true,
        "auditFrequency": "daily",
        "autoUpdate": false,
        "vulnerabilityScanning": true
      },
      "deployment": {
        "atomicDeploys": true,
        "rollbackEnabled": true,
        "healthChecks": true,
        "sslEnforcement": true
      },
      "codeSecurity": {
        "noHardcodedSecrets": true,
        "inputValidation": true,
        "xssProtection": true,
        "csrfProtection": true,
        "contentSecurityPolicy": true
      }
    },
    "monitoring": {
      "enabled": true,
      "alerts": {
        "failedDeployments": true,
        "securityVulnerabilities": true,
        "unauthorizedAccess": true,
        "buildFailures": true
      },
      "logs": {
        "retention": "30 days",
        "level": "info",
        "securityEvents": true
      }
    },
    "emergency": {
      "contacts": {
        "security": "security@nihongoapp.com",
        "github": "https://github.com/security"
      },
      "procedures": {
        "compromiseSuspected": [
          "Change all passwords and tokens",
          "Revoke repository access",
          "Review git history",
          "Reset to known good state",
          "Redeploy securely"
        ],
        "deploymentFailure": [
          "Check build logs",
          "Verify dependencies",
          "Reset to last working commit",
          "Trigger rebuild"
        ]
      }
    },
    "compliance": {
      "standards": ["OWASP", "CIS"],
      "dataProtection": true,
      "privacyPolicy": true,
      "gdprCompliant": false
    }
  }
}